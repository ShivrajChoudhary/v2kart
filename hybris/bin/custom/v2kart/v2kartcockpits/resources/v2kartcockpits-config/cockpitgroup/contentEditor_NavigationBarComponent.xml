<?xml version="1.0" encoding="UTF-8"?>
<content-editor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="content-editor.xsd"
    hideEmpty="true" hideReadOnly="true" groupCollections="false">
    <template>
	<![CDATA[
		<table width="100%" style="margin: 0; padding: 0">
			<tbody>
				<tr>
					<td colspan="2"><div style="height:6px"/></td>
				</tr>
				<tr>
					<td style="width:900px"><cockpit code="property" value="NavigationBarComponent.dropDownLayout"/></td>
					<td><div style="height:6px"/></td>
				</tr>
				<tr>
					<td style="width:900px"><cockpit code="property" value="NavigationBarComponent.link.linkName"/></td>
					<td><div style="height:6px"/></td>
				</tr>
				<tr>
					<td style="width:900px"><cockpit code="property" value="NavigationBarComponent.navigationNode"/></td>
					<td><div style="height:6px"/></td>
				</tr>
				<tr>
					<td style="width:900px"><cockpit code="property" value="NavigationBarComponent.styleClass"/></td>
					<td><div style="height:6px"/></td>
				</tr>
				<tr>
					<td style="width:900px"><cockpit code="property" value="NavigationBarComponent.wrapAfter"/></td>
					<td><div style="height:6px"/></td>
				</tr>
                <tr>
                    <td style="width:900px"><cockpit code="property" value="NavigationBarComponent.banner"/></td>
                    <td><div style="height:6px"/></td>
                </tr>
			</tbody>
		</table>
	]]>
	</template>
    
    <custom-editors>
        <property qualifier="SimpleBannerComponent.media" editorCode="simpleMediaReferenceSelector">
            <parameter>
                <name>mimeTypes</name>
                <value>image/jpeg;image/gif;image/png</value>
            </parameter>
            <parameter>
                <name>allowCreate</name>
                <value>true</value>
            </parameter>
            <parameter>
                <name>predefinedValuesStrategy</name>
                <value>imageMediaPredefinedValuesStrategy</value>
            </parameter>
        </property>
    </custom-editors>
</content-editor>